<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MisCultivosActivity"
    android:orientation="vertical"
    android:background="@drawable/difuminado">

    <!--Bienvenido a GlobalCampo-->

    <!--Texto de bienvenida-->

    <TextView
        android:id="@+id/miscultivos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mis Recolectas"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />


    <TextView
        android:id="@+id/descripcion_bienvenidad"
        android:layout_width="292dp"
        android:layout_height="34dp"
        android:hint="Consulte mediantes el listado las recolectas registradas en ProCampo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecolectas"
        android:layout_width="361dp"
        android:layout_height="519dp"
        android:layout_marginTop="9dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_bienvenidad"
        tools:layout_editor_absoluteX="-1dp">


    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_below="@+id/recyclerViewRecolectas"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        app:layout_constraintTop_toBottomOf="@+id/recyclerViewRecolectas"
        app:menu="@menu/navigation"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>