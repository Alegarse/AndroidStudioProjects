<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/first"
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="1st"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#2196F3">
    </TextView>
    <TextView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="2rd"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#F44336"
        android:layout_below="@id/first">
    </TextView>
    <TextView
        android:id="@+id/third"
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="3rd"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#8FF436"
        android:layout_above="@id/second"
        android:layout_alignParentRight="true">
    </TextView>

    <TextView
        android:id="@+id/fourth"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="4th"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#E6FF5722"
        android:layout_above="@id/fifth"
        android:layout_toLeftOf="@+id/third">
    </TextView>
    <TextView
        android:id="@+id/fifth"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="5th"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#FFEB3B"
        android:layout_above="@id/second"
        android:layout_toLeftOf="@+id/third">
    </TextView>
    <TextView
        android:id="@+id/sixth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="6th"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="#8C4E9C"
        android:layout_above="@id/second"
        android:layout_toRightOf="@+id/first"
        android:layout_toLeftOf="@+id/fifth">
    </TextView>

</RelativeLayout>