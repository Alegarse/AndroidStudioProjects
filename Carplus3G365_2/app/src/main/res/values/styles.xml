<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  Ventana de dialogo sin titulo -->
    <style name="FullHeightDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="textoAzuladoCard">
        <item name="android:textColor">#0B273E</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textoAzulado">
        <item name="android:textColor">#0B273E</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Para texto negro -->
    <style name="texto_negro">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texto_blanco_sombra">
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dip</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txtBlancoLabels">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- Boton base Rojo Claro -->
    <style name="Base.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/boton_base_redondeado</item>
    </style>

    <style name="AppTheme.NoActionBar.PopUp">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>