<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondodegradado"
    android:minHeight="45dip"
    android:orientation="horizontal"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDocumentoFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/document"
                    android:textSize="12sp"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMatriculaFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/car_plate"
                    android:textSize="12sp"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtGpFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Gp"
                    android:textSize="12sp"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="45dp"
                android:layout_height="fill_parent"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtFechaFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/date_hour"
                    android:textSize="12sp"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombreFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/client_name"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtLugarFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="@string/collect_place"
                    android:textSize="12sp"
                    android:layout_marginRight="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/txtEstadoFila"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/borde_blanco"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtObsFilaRecogidas"
                    android:textColor="@color/azulTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="Obs"
                    android:textSize="14sp"
                    android:layout_marginRight="2dp"/>

                <TextView
                    android:id="@+id/txtRecogidasDebe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#00000000" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
