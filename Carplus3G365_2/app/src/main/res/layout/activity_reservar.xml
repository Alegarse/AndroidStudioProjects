<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    tools:context=".Reservar">

    <ImageButton
        android:id="@+id/salirR"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_base_rojo"
        android:gravity="center"
        android:src="@drawable/exit_session"
        android:tint="#fff"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/menuPpalR"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_base_verde"
        android:gravity="center"
        android:src="@drawable/go_home"
        android:tint="#fff"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ScrollView
        android:id="@+id/scrollReservar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="70dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/contenidoReservar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--CardView de entrega de vehículos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardEntregas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D5EDD6"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearEntregas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/entregas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/delivery"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/oficinaEntrega"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/office"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <Spinner
                            android:id="@+id/spinOev"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/txtOev"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:hint="@string/delivery_place"
                            android:focusable="false"
                            android:enabled="false"
                            android:focusableInTouchMode="false"
                            android:maxLength="25"
                            android:maxLines="1" />
                    </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:id="@+id/fechaEntrega"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date"/>
                    <TextView
                        android:id="@+id/horaEntrega"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="200dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hour"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:id="@+id/txtF1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/date_format"
                            android:gravity="center_horizontal"
                            android:inputType="none"
                            android:maxLength="10"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/txtH1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="120dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/hour_format"
                            android:gravity="center_horizontal"
                            android:inputType="none"
                            android:maxLength="5"
                            android:maxLines="1" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView de recogida de vehículos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRecogidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F3E4E3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearRecogidas"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recogidas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/collect_"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/oficinaRecogida"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:text="@string/office"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <Spinner
                            android:id="@+id/spinOrv"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/txtOrv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center_horizontal"
                            android:hint="@string/collect_site"
                            android:enabled="false"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:maxLength="25"
                            android:maxLines="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:id="@+id/fechaRecogida"
                            style="@style/textoAzuladoCard"
                            android:layout_marginStart="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date"/>
                        <TextView
                            android:id="@+id/horaRecogida"
                            style="@style/textoAzuladoCard"
                            android:layout_marginStart="200dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hour"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:id="@+id/txtF2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="10dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/date_format"
                            android:gravity="center_horizontal"
                            android:inputType="none"
                            android:maxLength="10"
                            android:maxLines="1" />

                        <EditText
                            android:id="@+id/txtH2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="120dp"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:hint="@string/hour_format"
                            android:gravity="center_horizontal"
                            android:inputType="none"
                            android:maxLength="5"
                            android:maxLines="1" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView de datos de vehículo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDatosVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#E1DAED"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearDatosVeh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/vehiculo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/vehicle"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textSize="18sp"/>

                        <Button
                            android:id="@+id/btnDisponibles"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:paddingVertical="1dp"
                            android:background="@drawable/boton_base_redondeado"
                            app:backgroundTint="@color/amarilloPalido"
                            android:layout_alignParentEnd="true"
                            android:text="@string/availability" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <TextView
                            android:id="@+id/txtGrupo"
                            style="@style/textoAzuladoCard"
                            android:layout_marginStart="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/group"/>
                        <TextView
                            android:id="@+id/txtMatricula"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/textoAzuladoCard"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="150dp"
                            android:text="@string/car_plate"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:id="@+id/etGrupo"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:enabled="false"
                            android:inputType="none"
                            android:maxLength="2"
                            android:maxLines="1"/>

                        <EditText
                            android:id="@+id/etMatricula"
                            android:layout_width="95dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="120dp"
                            android:enabled="false"
                            android:inputType="none"
                            android:maxLength="10"
                            android:maxLines="1" />

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/modelo"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/model"/>
                    <EditText
                        android:id="@+id/txtModelo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="5dp"
                        android:enabled="false"
                        android:inputType="none"
                        android:maxLength="50"
                        android:maxLines="1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView de imágenes de vehículo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardFotosVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F4F6DF"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearFotosVeh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/imagenes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/images"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textSize="18sp"/>

                        <Button
                            android:id="@+id/btnHacerFotos"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:paddingVertical="1dp"
                            android:background="@drawable/boton_base_redondeado"
                            app:backgroundTint="@color/amarilloPalido"
                            android:text="@string/take_photo" />

                    </RelativeLayout>

                    <TableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:shrinkColumns="0,1"
                        android:stretchColumns="0,1">

                        <TableRow
                            android:id="@+id/cntFotosBody"
                            android:padding="5dp">

                            <LinearLayout
                                android:focusableInTouchMode="true"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <HorizontalScrollView
                                    android:id="@+id/horizontalScrollView1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="start"
                                    android:layout_weight="7">

                                    <LinearLayout
                                        android:id="@+id/thumbnails"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txtSinFotos"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center|end"
                                            android:text="@string/fotos_empty"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            style="@style/texto_negro"
                                            android:textSize="12sp"
                                            android:textColor="#9A9494" />

                                    </LinearLayout>
                                </HorizontalScrollView>
                            </LinearLayout>
                        </TableRow>
                    </TableLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView de extras de vehículo -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardExtrasVehiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#D3DBF3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearExtrasVeh"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/extras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:text="@string/extras"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:fontFamily="sans-serif-light"
                            android:textSize="18sp"/>

                        <Button
                            android:id="@+id/btnAddExtra"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:paddingVertical="1dp"
                            android:background="@drawable/boton_base_redondeado"
                            app:backgroundTint="@color/amarilloPalido"
                            android:text="@string/add_extra" />

                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/rContExtras"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CardView de datos del cliente -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardDatosCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#F4F5F8"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearDatosCliente"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/datoscliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/client_data"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:fontFamily="sans-serif-light"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"/>
                    <TextView
                        android:id="@+id/nombreC"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"/>
                    <EditText
                        android:id="@+id/txtNombreC"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="5dp"
                        android:inputType="text"
                        android:maxLength="35"
                        android:maxLines="1" />
                    <TextView
                    android:id="@+id/telefonoC"
                    style="@style/textoAzuladoCard"
                    android:layout_marginStart="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"/>
                    <EditText
                        android:id="@+id/txtTelefonoC"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="5dp"
                        android:inputType="textPhonetic"
                        android:maxLength="15"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/emailC"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mail"/>
                    <EditText
                        android:id="@+id/txtEmailC"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginHorizontal="5dp"
                        android:inputType="textEmailAddress"
                        android:maxLength="65"
                        android:maxLines="1" />
                    <TextView
                        android:id="@+id/obsC"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/observations"/>
                    <EditText
                        android:id="@+id/txtObsC"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:maxLength="255"
                        android:maxLines="4"
                        android:minLines="4" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView de Resumen -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardResumen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:id="@+id/linearResumen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_resumen"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/resumen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/summary"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:fontFamily="sans-serif-light"
                        android:layout_gravity="center_horizontal"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/ocupacion"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/occupation"/>
                    <EditText
                        android:id="@+id/txtOcupacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:width="100dp"
                        android:gravity="center_vertical|end"
                        android:inputType="none"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:text="@string/zero_dec"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <TextView
                        android:id="@+id/extrasResumen"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/extras"/>
                    <EditText
                        android:id="@+id/txtExtrasResumen"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:width="100dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|end"
                        android:inputType="none"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:text="@string/zero_dec"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                    <TextView
                        android:id="@+id/totalReserva"
                        style="@style/textoAzuladoCard"
                        android:layout_marginStart="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_reserve"/>
                    <EditText
                        android:id="@+id/txtTotalReserva"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:width="100dp"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical|end"
                        android:inputType="none"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:text="@string/zero_dec"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!--  Botones final Actividad -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/limpiarR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="@color/rojoClaro"
                    android:background="@drawable/boton_base_redondeado"
                    android:text="@string/clean"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:layout_margin="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/confirmarR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    app:backgroundTint="@color/azulClaro"
                    android:background="@drawable/boton_base_redondeado"
                    android:text="@string/confirm"
                    android:textAllCaps="true"
                    android:textColor="#fff"
                    android:layout_margin="5dp"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/pieDeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/info" />



</androidx.constraintlayout.widget.ConstraintLayout>