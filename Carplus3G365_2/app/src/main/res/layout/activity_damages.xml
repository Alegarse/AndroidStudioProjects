<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    tools:context=".Damages">

    <ImageButton
        android:id="@+id/salirDAM"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_base_rojo"
        android:gravity="center"
        android:src="@drawable/exit_session"
        android:tint="#fff"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/menuPpalDAM"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_base_verde"
        android:gravity="center"
        android:src="@drawable/go_home"
        android:tint="#fff"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollDamages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/relDanos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fondo_blanco_borde_gris">

                <ImageView
                    android:id="@+id/imgAlfaRomeo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Paramejorar la visibilidad y el manejo, aquÃ­ no mostramos el logo corporativo
    <ImageView
        android:id="@+id/pieDeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/info" />
    -->

</androidx.constraintlayout.widget.ConstraintLayout>