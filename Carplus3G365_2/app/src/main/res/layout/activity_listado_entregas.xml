<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    tools:context=".ListadoEntregas">

    <ImageButton
        android:id="@+id/salirLE"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_base_rojo"
        android:gravity="center"
        android:src="@drawable/exit_session"
        android:tint="#fff"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/menuPpalLE"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/boton_base_verde"
        android:gravity="center"
        android:src="@drawable/go_home"
        android:tint="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:scrollbars="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- CardView Recogidas de vehículos -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardListadoRecogidas1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Titulo selección opción -->
                        <LinearLayout
                            android:id="@+id/LinearCabeceraListadosR"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginVertical="5dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/degradado_azul_linear_layout"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tituloListadosR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center_vertical"
                                android:text="@string/veh_returns"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#fff"
                                android:textSize="17sp"/>

                        </LinearLayout>

                        <!-- Datos de selección-->
                        <LinearLayout
                            android:id="@+id/linearLayout11"
                            android:layout_width="fill_parent"
                            android:layout_height="80dip"
                            android:background="@drawable/fondo_blanco_borde_gris"
                            android:orientation="horizontal"
                            android:padding="5dip">

                            <LinearLayout
                                android:id="@+id/LinearLayout02"
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView10"
                                    style="@style/textoAzulado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/branch_office" />

                                <Spinner
                                    android:id="@+id/spinSucEnt"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout08"
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView09"
                                    style="@style/textoAzulado"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/date"/>

                                <EditText
                                    android:id="@+id/txtF1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:hint="@string/date_format"
                                    android:inputType="none"
                                    android:maxLength="10"
                                    android:maxLines="1" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="70dp"
                                android:layout_height="match_parent"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView16"
                                    style="@style/textoAzulado"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Inc. Cnts."/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center">

                                    <CheckBox
                                        android:id="@+id/chk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout09"
                                android:layout_width="80dp"
                                android:layout_height="fill_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView13"
                                    style="@style/textoAzulado"
                                    android:layout_marginStart="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/total" />

                                <TextView
                                    android:id="@+id/txtEntregasTotal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginTop="3dp"
                                    android:maxWidth="80dp"
                                    android:text="@string/zero"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textColor="#000000"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="15dip"
                                android:gravity="end"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnMostrarEntregas"
                                    android:backgroundTint="@color/amarilloPalido"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/search"
                                    android:onClick="btnMostrarEntregasClick"
                                    android:text="@string/see_returns"/>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CardView al pulsar boton Ver Entregas -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardListadoEntregas2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!-- Titulo selección opción -->
                        <LinearLayout
                            android:id="@+id/LinearCabeceraListadosE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginVertical="3dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/degradado_azul_linear_layout"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tituloListadosE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center_vertical"
                                android:text="@string/veh_returns"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#fff"
                                android:textSize="17sp"/>

                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/linearLayout12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/fondo_blanco_borde_gris"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/TextView20"
                                style="@style/textoAzulado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="@string/branch_office"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtSuc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxWidth="120dp"
                                android:layout_marginStart="8dp"
                                android:maxLines="1"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/TextView20"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/TextView19"
                                style="@style/textoAzulado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:text="@string/date"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/txtSuc"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtFec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/TextView19"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/TextView23"
                                style="@style/textoAzulado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:text="@string/total"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/txtFec"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/txtTot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/TextView23"
                                app:layout_constraintTop_toTopOf="parent" />

                            <Button
                                android:id="@+id/btnLimpiarListado"
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_marginEnd="30dp"
                                android:backgroundTint="@color/azulClaro"
                                android:drawableStart="@drawable/search"
                                android:gravity="center"
                                android:paddingTop="1dp"
                                android:text="@string/clean"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- CardView Tabla de datos -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardListadoEntregas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="5dp"
                        android:orientation="vertical">

                        <!-- Cabecera opciones tabla -->
                        <LinearLayout
                            android:id="@+id/LinearLayout04"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/degradado_azul_linear_layout"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:id="@+id/linearLayout4"
                                android:layout_width="35dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView06"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Suc"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout5"
                                android:layout_width="45dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView05"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/hour"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout6"
                                android:layout_width="30dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView04"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gp"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout7"
                                android:layout_width="30dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView02"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gp2"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout8"
                                android:layout_width="40dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView01"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/days"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearLayout9"
                                android:layout_width="60dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView03"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Mtr"
                                    android:textSize="14sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout01"
                                android:layout_width="90dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView07"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/client"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout06"
                                android:layout_width="90dp"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView11"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/place"
                                    android:textSize="14sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/LinearLayout07"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="@drawable/borde_blanco"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TextView12"
                                    style="@style/texto_blanco_sombra"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/observations"
                                    android:textSize="14sp" />
                            </LinearLayout>

                        </LinearLayout>

                        <ListView
                            android:id="@+id/contEntregas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/fondo_blanco_borde_gris"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


    </LinearLayout>

    <!-- Paramejorar la visibilidad y el manejo, aquí no mostramos el logo corporativo
    <ImageView
        android:id="@+id/pieDeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/info" />
        -->

</androidx.constraintlayout.widget.ConstraintLayout>