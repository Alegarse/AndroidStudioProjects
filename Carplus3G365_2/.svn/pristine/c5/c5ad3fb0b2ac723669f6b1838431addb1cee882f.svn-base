<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout1"
    android:layout_width="420dip"
    android:layout_height="fill_parent"
    android:background="@drawable/fondodegradado"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dip"
    android:weightSum="1">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMeetingNumRes"
                style="@style/texto_negro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/book_and_number"
                android:textSize="25sp" >
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <EditText
                    android:id="@+id/txtMeetingHoras"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/text_hour"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/two_zero" />


                <EditText
                    android:id="@+id/txtMeetingMinutos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/text_min"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="@string/two_zero" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top" >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMeetingOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="25dp"
                    app:backgroundTint="@color/colorNaranBtn"
                    android:background="@drawable/boton_base_redondeado"
                    android:text="@string/confirm_meeting"
                    android:textAllCaps="true"
                    android:textColor="#fff" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMeetingCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:backgroundTint="@color/rojoClaro"
                    android:background="@drawable/boton_base_redondeado"
                    android:text="@string/cancel"
                    android:textAllCaps="true"
                    android:textColor="#fff"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>