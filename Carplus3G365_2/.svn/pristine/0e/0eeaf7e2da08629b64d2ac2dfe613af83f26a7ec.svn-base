<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodegradado"
    tools:context=".Listados">

    <ImageButton
        android:id="@+id/salirL"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/boton_base_rojo"
        android:gravity="center"
        android:src="@drawable/exit_session"
        android:tint="#fff"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/menuPpalL"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/boton_base_verde"
        android:gravity="center"
        android:src="@drawable/go_home"
        android:tint="#fff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:visibility="visible"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:id="@+id/scrollListados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="70dp"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CardView Ficha del vehículo -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEstado1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="5dp"
                        android:orientation="vertical">

                        <!-- Titulo selección opción -->
                        <LinearLayout
                            android:id="@+id/LinearCabeceraListados"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginBottom="5dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@drawable/degradado_azul_linear_layout"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tituloListados"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:fontFamily="sans-serif-black"
                                android:gravity="center_vertical"
                                android:text="@string/select_option"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#fff"
                                android:textSize="17sp"/>

                        </LinearLayout>

                        <!-- Listado de opciones -->
                        <!-- Recogidas -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_recogidas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageRecogidas"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="5dp"
                                android:layout_below="@+id/tituloRecogidas"
                                android:layout_alignParentEnd="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/recogidas" />

                            <TextView
                                android:id="@+id/tituloRecogidas"
                                android:layout_width="247dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="16dp"
                                android:text="@string/title_collects"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.348"
                                app:layout_constraintStart_toEndOf="@+id/imageRecogidas"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/descRecogidas"
                                android:layout_width="243dp"
                                android:layout_height="43dp"
                                android:layout_below="@+id/imageRecogidas"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:text="@string/desc_collects"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.34"
                                app:layout_constraintStart_toEndOf="@+id/imageRecogidas"
                                app:layout_constraintTop_toBottomOf="@+id/tituloRecogidas" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Entregas -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_entregas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageEntregas"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="5dp"
                                android:layout_below="@+id/tituloEntregas"
                                android:layout_alignParentEnd="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/entregas" />

                            <TextView
                                android:id="@+id/tituloEntregas"
                                android:layout_width="247dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="16dp"
                                android:text="@string/title_deliveries"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.348"
                                app:layout_constraintStart_toEndOf="@+id/imageEntregas"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/descEntregas"
                                android:layout_width="243dp"
                                android:layout_height="43dp"
                                android:layout_below="@+id/imageEntregas"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:text="@string/desc_deliveries"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.34"
                                app:layout_constraintStart_toEndOf="@+id/imageEntregas"
                                app:layout_constraintTop_toBottomOf="@+id/tituloEntregas" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Asignados -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_asignados"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageAsignados"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="5dp"
                                android:layout_below="@+id/tituloAsignados"
                                android:layout_alignParentEnd="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/asignados" />

                            <TextView
                                android:id="@+id/tituloAsignados"
                                android:layout_width="247dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="16dp"
                                android:text="@string/title_veh_asig"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.348"
                                app:layout_constraintStart_toEndOf="@+id/imageAsignados"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/descAsignados"
                                android:layout_width="243dp"
                                android:layout_height="43dp"
                                android:layout_below="@+id/imageAsignados"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:text="@string/desc_veh_asig"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.34"
                                app:layout_constraintStart_toEndOf="@+id/imageAsignados"
                                app:layout_constraintTop_toBottomOf="@+id/tituloAsignados" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Meeting -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_meeting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#fff"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageMeeting"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="5dp"
                                android:layout_below="@+id/tituloMeeting"
                                android:layout_alignParentEnd="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/meeting" />

                            <TextView
                                android:id="@+id/tituloMeeting"
                                android:layout_width="247dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="16dp"
                                android:text="@string/title_meeting"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.348"
                                app:layout_constraintStart_toEndOf="@+id/imageMeeting"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/descMeeting"
                                android:layout_width="243dp"
                                android:layout_height="43dp"
                                android:layout_below="@+id/imageMeeting"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:text="@string/desc_meeting"
                                android:layout_marginTop="3dp"
                                android:textAlignment="center"
                                android:textColor="#000"
                                android:textSize="14sp"
                                android:textStyle="italic"
                                android:typeface="serif"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.34"
                                app:layout_constraintStart_toEndOf="@+id/imageMeeting"
                                app:layout_constraintTop_toBottomOf="@+id/tituloMeeting" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <ImageView
        android:id="@+id/pieDeApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/info" />

</androidx.constraintlayout.widget.ConstraintLayout>